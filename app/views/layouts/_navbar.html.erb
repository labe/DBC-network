<div id="user_nav">
  <%= link_to(image_tag("devbootcamp.png", :size => "120x57", :class => "main-logo"), root_path, :class => "logo-link") %>

  <ul class="nav_choices">
    <%= link_to "/companies" do %>
    <li>Companies</li>
    <% end %>
    <%= link_to "/students" do %>
    <li>Students</li>
    <% end %>
    <% if current_user && current_user.groupable_type == "Admin" %>
      <%= link_to "/admin" do %>
      <li>Admin</li>
      <% end %>
    <% end %>
  </ul>

  <%= form_tag results_path, method: :get, class: "nav-search" do  %>
  <%= text_field_tag :search, params[:search], placeholder: "Search" %>
  <% end %>

  <div class="nav_profile">
  <% if current_user %>

    <span class="email"><%= link_to current_user.email, user_path(current_user) %></span>
    <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %>
    <%= link_to "Log in", log_in_path %>
  <% end %>
  </div>
</div>
