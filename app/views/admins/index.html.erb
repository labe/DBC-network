<% if current_user.groupable_type == "Admin" %>
Students:<br>
<% @students.each do |student| %>
Name: <%= student.first_name %> <%= student.last_name %>
Last login: <%= student.last_login %>
Email: <%= student.email %>
Status: <%= student.status %>
Part of: <%= student.groupable.name %>
<% if student.activated == true %>
ALREADY ACTIVATED
<% elsif student.activated == false %>
ALREADY DENIED
<%= form_for student, :url => activation_path, :method => 'post' do |f| %>
        <%= f.hidden_field :activated, :value => true %>
        <%= f.hidden_field :student_id, :value => student.id %>
        <%= f.submit "Activate instead", :class => "link" %>
    <% end %>
<% elsif student.activated == nil %>
    <%= form_for student, :url => activation_path, :method => 'post' do |f| %>
        <%= f.hidden_field :activated, :value => true %>
        <%= f.hidden_field :student_id, :value => student.id %>
        <%= f.submit "Activate", :class => "link" %>
    <% end %>
    <%= form_for student, :url => activation_path, :method => 'post' do |f| %>
        <%= f.hidden_field :activated, :value => false %>
        <%= f.hidden_field :student_id, :value => student.id %>
        <%= f.submit "Deny", :class => "link" %>
    <% end %>
<% end %>

<br><br><br>
<% end %>

