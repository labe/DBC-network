<% if user.status == "active" %>
    <%= form_for user, :url => status_path, :method => 'post' do |f| %>
      <%= f.hidden_field :status, :value => "inactive" %>
      <%= f.hidden_field :id, :value => user.id %>
      <%= f.submit "Hide profile", :class => "link" %>
    <% end %>
