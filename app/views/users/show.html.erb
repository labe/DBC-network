<% if @user.status == "active" %>
  <% if @user.groupable_type == "Cohort" %>
    <%= render partial: 'users/student_profile', locals: { user: @user, current_user: current_user, pitcher_interest: @pitcher_interest, catcher_interest: @catcher_interest } %>
  <% elsif @user.groupable_type == "Company" %>
    <%= render partial: 'users/employer_profile', locals: { user: @user } %>
  <% elsif @user.groupable_type == "Mentorship" %>
    <%= render partial: 'users/mentor_profile', locals: { user: @user, current_user: current_user, pitcher_interest: @pitcher_interest, catcher_interest: @catcher_interest } %>
  <% elsif @user.groupable_type == "Faculty" %>
    <%= render partial: 'users/staff_profile', locals: { user: @user, current_user: current_user, pitcher_interest: @pitcher_interest, catcher_interest: @catcher_interest } %>
  <% end %>
<% elsif @user.status == "inactive" %>
  <div class="card_layout">
  <div class="inactive-user">This user is inactive.</div>
  </div>
<% end %>
