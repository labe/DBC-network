<div>
  <h2><%= @groupable %> List</h2>
  <ul class="user_list">
    <% @users.each do |user| %>

      <li id="<%=user.id%>"
          data-location="<%= user.location.gsub(/\s+/, "") %>"
          data-group="<%= user.groupable.name.gsub(/\s+/, "") %>"
          data-status="<%= user.status.gsub(/\s+/, "") %>"
          data-last-login="<%= user.last_login %>"
      >
        <div class="user-div">
          <%= link_to "#{user.last_name}, #{user.first_name}", user_path(user.id) %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
